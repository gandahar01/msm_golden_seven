<h1>Edit Director <%= @directore.id %></h1>

<form action="/update_director/<%= @directore.id %>">
      <div>
    <label for="Name">
      Name
    </label>

    <input id="Name" type="text" name="the_name" value="<%= @directore.name %>">
  </div>
  
    <div>
    <label for="Bio">
      BIO
    </label>

    <input id="Bio" type="text" name="the_bio" value="<%= @directore.bio %>">
  </div>
  
  <div>
    <label for="Dob">
      DOB
    </label>

    <input id="Dob" type="text" name="the_dob" value="<%= @directore.dob %>">
  </div>

  <div>
    <label for="Image url">
      Image URL
    </label>

    <input id="Image url" type="text" name="the_image_url" value="<%= @directore.image_url %>">
  </div>
    
    <button>
    Update director
  </button>
</form>
