<h1>Edit Movie <%= @moviee.id %></h1>

<form action="/update_movie/<%= @moviee.id %>">
      <div>
    <label for="Title">
      Title
    </label>

    <input id="Title" type="text" name="the_title" value="<%= @moviee.title %>">
  </div>
  
    <div>
    <label for="Year">
      Year
    </label>

    <input id="Year" type="text" name="the_year" value="<%= @moviee.year %>">
  </div>
  
  <div>
    <label for="Duration">
      Duration
    </label>

    <input id="Duration" type="text" name="the_duration" value="<%= @moviee.duration %>">
  </div>
  
  <div>
    <label for="Description">
      Description
    </label>

    <textarea id="description" name="the_description" placeholder="Description" class="form-control" rows="3"><%= @moviee.description %></textarea>
  </div>  

  <div>
    <label for="Image url">
      Image URL
    </label>

    <input id="Image url" type="text" name="the_image_url" value="<%= @moviee.image_url %>">
  </div>
    
    <button>
    Update movie
  </button>
</form>
